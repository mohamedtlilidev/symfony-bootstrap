{% extends 'base.html.twig' %}
{% block body %}
    <div id="content">
    <div id="content-header">
        <h1 class="styleTitle">Reporting</h1>
        <p><i>Cette page présente uniquement des rapports sur mesure et optionels. L'export normal se fait via le
                choix « Télécharger fichier CSV » de la page Historique et Recherche </i></p>
    </div>
    <div class="container-fluid">
        <div class="widget-title">
                <span class="icon">
                    <i class="icon-th">

                    </i>
                </span>
            <h5><a>Domaine RH- GEDDSM</a></h5></div>
    </div>
    <div class="bloc_request_rapport">
        <div class="bloc_gauche">
            <h7>Requêtes :</h7>
            <a class="btn btn-primary btnrequest" href="{{ path('get-status') }}">Documents GED par societé</a>
        </div>
        <div class="bloc_droite">
            <h7>Rapports :</h7>

        </div>
    </div>
    <div class="telecharger">
        <a href="{{ path('export-csv') }}">Télécharger au format .csv</a>
        <a href="">M'envoyer le .csv par mail</a>
        <a href="">Démander une exécution automatique réguliére</a>
        <a href="">Voir les droits d'accés</a>


    </div>
    <div class="table_request">
        <table id="datatableProcess" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Domaine</th>
                <th scope="col">Titre</th>
                <th scope="col">Objet</th>
                <th scope="col">Demandeur</th>
                <th scope="col">Bénéificiare</th>
                <th scope="col">Date de lancement</th>
                <th scope="col">En cours chez</th>
                <th scope="col">Statut</th>
                <th scope="col">Décision directeur</th>
                <th scope="col">Commentaire</th>
            </tr>
            </thead>
            <tbody>
            {% for var_instance in var_instances %}
                {%  set name= var_instance.procDefId | split(':') %}
                {% if var_instance.deleteReason  %}
                    <tr>
                        <td></td>
                        <td> RH</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>En cours</td>
                        <td></td>
                        <td></td>
                    </tr>
                {%  endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}